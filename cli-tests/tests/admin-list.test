## admin list

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test admin-list-1.0 {admin list, wrong args, too many} -setup {
    stage-open
} -body {
    run admin list X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test admin-list-1.1 {admin-list, login required} -setup {
    stage-open
    ref-target
} -body {
    run admin list
} -cleanup {
    stage-close
} -returnCodes error -result {Login Required
Please use 'stackato login'}

test admin-list-1.2 {admin list, admin login required} -setup {
    stage-open
    go-admin
    go-non-admin
} -body {
    run admin list
} -cleanup {
    be-admin
    remove-non-admin
    stage-close
} -returnCodes error -result \
    [per-api \
	 {Error 200: Operation not permitted} \
	 {{"error":"access_denied","error_description":"Access is denied"}}]

test admin-list-1.3 {admin list} -setup {
    stage-open
    go-admin
} -body {
    run admin list
} -cleanup {
    stage-close
} -match glob -result "+-*-+\n| Email * |\n+-*-+\n*| [adminuser] *|*\n+-*-+"

