## create-domain

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test create-domain-1.0 {create-domain, wrong args, not enough} -constraints cfv2 -setup {
    stage-open
    ref-target
    go-admin
} -body {
    run create-domain -n
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, not enough*"

test create-domain-1.1 {create-domain, wrong args, too many} -constraints cfv2 -setup {
    stage-open
    ref-target
    go-admin
} -body {
    run create-domain D X
} -cleanup {
    remove-appdir
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test create-domain-1.2 {create-domain, not allowed for cfv1} -constraints cfv1 -setup {
    stage-open
    ref-target
    go-admin
} -body {
    run create-domain clitestdomain
} -cleanup {
    stage-close
} -returnCodes error -result {Error: This command requires a target exporting the CF v2 API}

test create-domain-1.3 {create-domain, login required} -constraints cfv2 -setup {
    stage-open
    ref-target
} -body {
    run create-domain clitestdomain
} -cleanup {
    stage-close
} -returnCodes error -result [login-required]

test create-domain-1.4 {create-domain, bad domain format} -constraints cfv2 -setup {
    stage-open
    go-admin
    go-non-admin
} -body {
    run create-domain clitestdomain
} -cleanup {
    be-admin
    remove-non-admin
    stage-close
} -returnCodes error -result {Error 130001: The domain is invalid: name format (400)}

test create-domain-1.5 {create-domain, non-admin login} -constraints cfv2 -setup {
    stage-open
    go-admin
    go-non-admin
} -body {
    run create-domain clitestdomain.activestate.com
} -cleanup {
    run delete-domain -n clitestdomain.activestate.com
    be-admin
    remove-non-admin
    stage-close
} -result "Creating new domain clitestdomain.activestate.com (Owned by [theorg]) ... OK"

test create-domain-1.6 {create-domain, persists} -constraints cfv2 -setup {
    stage-open
    go-admin
} -body {
    run create-domain clitestdomain.activestate.com
    run domains
} -cleanup {
    run delete-domain -n clitestdomain.activestate.com
    stage-close
} -match glob -result "*| clitestdomain.activestate.com *| [theorg] *| *|*"

test create-domain-1.7 {create-domain, duplicate domains} -constraints cfv2 -setup {
    stage-open
    go-admin
    run create-domain clitestdomain.activestate.com
} -body {
    run create-domain clitestdomain.activestate.com
} -cleanup {
    run delete-domain -n clitestdomain.activestate.com
    stage-close
} -returnCodes error -result {Error: Unable to create domain clitestdomain.activestate.com, it exists already.}

test create-domain-1.8 {create-domain, shared} -constraints cfv2 -setup {
    stage-open
    go-admin
} -body {
    run create-domain --shared clitestdomain.activestate.com
    run domains
} -cleanup {
    run delete-domain -n clitestdomain.activestate.com
    stage-close
} -match glob -result "*| clitestdomain.activestate.com *| *| \\* *|*"

