## unbind-service

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test unbind-service-1.0 {unbind-service, wrong args, too many} -setup {
    stage-open
    go-admin
} -body {
    run unbind-service S A X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test unbind-service-1.1 {unbind-service, wrong args, not enough} -setup {
    stage-open
    go-admin
} -body {
    indir [appdir] { run unbind-service -n }
} -cleanup {
    remove-appdir
    stage-close
} -returnCodes error -result \
    {Expected an application name for "application", got "appdir"}

test unbind-service-1.2 {unbind-service, no application} -setup {
    stage-open
    go-admin
} -body {
    indir [appdir] { run unbind-service -n S }
} -cleanup {
    remove-appdir
    stage-close
} -returnCodes error -result \
    [per-api \
	 {Expected an application name for "application", got "appdir"} \
	 {Expected a service instance name for "service", got "S"}]

test unbind-service-1.3 {unbind-service, non-admin login is ok} -constraints cfv2uaa -setup {
    stage-open
    go-admin
    go-non-admin
    run create-service filesystem test-service
    make-test-app
    run bind-service test-service TEST
} -body {
    run unbind-service test-service TEST
} -cleanup {
    run delete-service -n test-service
    remove-test-app
    be-admin
    remove-non-admin
    remove-appdir
    stage-close
} -match glob -result *

test unbind-service-1.4 {unbind-service} -setup {
    stage-open
    go-admin
    run create-service filesystem test-service
    make-test-app
    run bind-service test-service TEST
} -body {
    run unbind-service test-service TEST
} -cleanup {
    run delete-service -n test-service
    remove-test-app
    remove-appdir
    stage-close
} -result {Unbinding Service ... OK}

test unbind-service-1.5 {unbind-service, persistent} -setup {
    stage-open
    go-admin
    run create-service filesystem test-service
    make-test-app
    run bind-service test-service TEST
} -body {
    run unbind-service test-service TEST
    run apps
} -cleanup {
    run delete-service -n test-service
    remove-test-app
    remove-appdir
    stage-close
} -match anti-glob -result {*| TEST* | 0* | STOPPED* | * | test-service |*}

