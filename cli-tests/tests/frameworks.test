## frameworks

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test frameworks-1.0 {frameworks, wrong args, too many} -setup {
    stage-open
} -body {
    run frameworks X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test frameworks-1.1 {frameworks, login required} -setup {
    stage-open
    ref-target
} -body {
    run frameworks
} -cleanup {
    stage-close
} -returnCodes error -result {Login Required
Please use 'stackato login'}

test frameworks-1.3.1 {frameworks} -constraints cfv1 -setup {
    stage-open
    go-admin
} -body {
    run frameworks
} -cleanup {
    stage-close
} -match glob -result {+---------------------+
| Name                |
+---------------------+
| buildpack - clojure |
| buildpack - go      |
| buildpack - java    |
| buildpack - play    |
| buildpack - pypy    |
| generic             |
| grails              |
| java_ee             |
| java_web            |
| lift                |
| node                |
| perl                |
| perlcgi             |
| php                 |
| play                |
| python              |
| rack                |
| rails3              |
| sinatra             |
| spring              |
| standalone          |
+---------------------+}

test frameworks-1.3.2 {frameworks, not allowed for CFv2} -constraints cfv2 -setup {
    stage-open
    go-admin
} -body {
    run frameworks
} -cleanup {
    stage-close
} -returnCodes error -result {Error: This command requires a target exporting the CF v1 API}

