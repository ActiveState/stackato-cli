## target information

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test info-1.0 {target information, wrong args, too many} -setup {
    stage-open
} -body {
    run info X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test info-1.1 {target information, transient target} -setup {
    stage-open
} -body {
    run info --target [thetarget]
} -cleanup {
    stage-close
} -match glob -result "ActiveState Stackato v*\nFor support visit *\nTarget:   [thetarget] (v0.999)\nClient:   v*"

test info-1.2 {target information, transient target is such} -setup {
    stage-open
    run info --target [thetarget]
} -body {
    run target
} -cleanup {
    stage-close
} -result {[https://api.stackato.local] (Note: Cannot access target (couldn't open socket: host is unreachable (Name or service not known)))}

test info-1.3.1 {target information, json, v1} -constraints cfv1 -setup {
    stage-open
} -body {
    run info --target [thetarget] --json
} -cleanup {
    stage-close
} -match glob -result [viewFile data/info13.txt]

test info-1.3.2 {target information, json, v2} -constraints cfv2 -setup {
    stage-open
} -body {
    run info --target [thetarget] --json
} -cleanup {
    stage-close
} -match glob -result {{
    "allow_debug"            : "true",
    "authorization_endpoint" : "*/uaa",
    "build"                  : "*",
    "description"            : "*",
    "name"                   : "vcap",
    "support"                : "*",
    "token_endpoint"         : "*/uaa",
    "version"                : "2"
}}

test info-1.4 {target information for admin} -setup {
    stage-open
    go-admin
} -body {
    run info
} -cleanup {
    stage-close
} -match glob -result "ActiveState Stackato v*\nFor support visit *\n\nTarget:   [thetarget] (v0.999)\nClient:   v*\n\nUser:     stackato@stackato.com\nGroups:   \nUsage:    Memory   (* of * total)\n          Services (* of * total)\n          Apps     (* of * total)"

test info-1.5 {target information, transient target by environment} -setup {
    stage-open
} -body {
    withenv {
	run info
    } STACKATO_TARGET [thetarget]
} -cleanup {
    stage-close
} -match glob -result "ActiveState Stackato v*\nFor support visit *\nTarget:   [thetarget] (v0.999)\nClient:   v*"

test info-1.6 {target information, transient target by environment is such} -setup {
    stage-open
    withenv {
	run info
    } STACKATO_TARGET [thetarget]
} -body {
    run target
} -cleanup {
    stage-close
} -result {[https://api.stackato.local] (Note: Cannot access target (couldn't open socket: host is unreachable (Name or service not known)))}

