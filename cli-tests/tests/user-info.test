## user introspection

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test user-info-1.0 {user introspection, wrong args, too many} -setup {
    stage-open
    ref-target
} -body {
    run user-info U X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result \
    [per-api \
	 {Error: This option requires a target exporting the CF v2 API} \
	 "wrong#args, too many*"]

test user-info-1.1 {user introspection, default target, bogus} -setup {
    stage-open
} -body {
    run user-info
} -cleanup {
    stage-close
} -returnCodes error -result {Cannot access target 'https://api.stackato.local' (couldn't open socket: host is unreachable (Name or service not known))}

test user-info-1.2 {user introspection, not logged in} -setup {
    stage-open
} -body {
    run user-info --target [thetarget]
} -cleanup {
    stage-close
} -returnCodes error -result [login-required]

test user-info-1.3 {user introspection, not logged in, default target} -setup {
    stage-open
    ref-target
} -body {
    run user-info
} -cleanup {
    stage-close
} -returnCodes error -result [login-required]

test user-info-1.4 {user introspection, logged in, default target} -setup {
    stage-open
    go-admin
} -body {
    run user-info
} -cleanup {
    stage-close
} -match glob -result \
    [map [per-api \
	      [viewFile data/uinfo141.txt] \
	      [viewFile data/uinfo142.txt]] \
	 @usr@ [adminuser] \
	 @org@ [theorg]]

test user-info-1.5 {user introspection, json, logged in, default target} -setup {
    stage-open
    go-admin
} -body {
    run user-info --json
} -cleanup {
    stage-close
} -match glob -result \
    [map [per-api \
	      [viewFile data/uinfo151json.txt] \
	      [viewFile data/uinfo152json.txt]] \
	 @usr@ [adminuser]]

test user-info-1.6 {user introspection, explicit user not possible for cfv1} -constraints cfv1 -setup {
    stage-open
    go-admin
} -body {
    run user-info foo
} -cleanup {
    stage-close
} -returnCodes error -result {Error: This option requires a target exporting the CF v2 API}

test user-info-1.7 {user introspection, explicit user requires cfv2, bad user} -constraints cfv2 -setup {
    stage-open
    go-admin
} -body {
    run user-info foo
} -cleanup {
    stage-close
} -returnCodes error -result [unexpected input name {A user} foo]

test user-info-1.8 {user introspection, explicit user requires cfv2} -constraints cfv2 -setup {
    stage-open
    go-admin
} -body {
    run user-info [adminuser]
} -cleanup {
    stage-close
} -match glob -result \
    [map [viewFile data/uinfo142.txt] \
	 @usr@ [adminuser] \
	 @org@ [theorg]]

