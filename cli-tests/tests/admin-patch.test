## admin patch

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt source support/common.tcl

# # ## ### ##### ######## ############# #####################

test admin-patch-1.0 {admin patch, wrong args, too many} -setup {
    stage-open
} -body {
    run admin patch P X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test admin-patch-1.1 {admin patch, wrong args, not enough} -setup {
    stage-open
} -body {
    run admin patch
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, not enough*"

test admin-patch-1.2 {admin-patch, login required} -setup {
    stage-open
    ref-target
} -body {
    run admin patch P
} -cleanup {
    stage-close
} -returnCodes error -result [login-required]

test admin-patch-1.3 {admin patch, dry run} -setup {
    stage-open
    go-admin
} -body {
    run admin patch --dry-run [tmp]/data/patch.sh
} -cleanup {
    stage-close
} -result [map [viewFile data/patch-ssh.txt] @target@ [targetdomain]]

test admin-patch-1.4 {admin patch} -constraints is-interactive -setup {
    stage-open
    go-admin
} -body {
    run admin patch [tmp]/data/patch.sh
} -cleanup {
    stage-close
} -result [viewFile data/patch-result.txt]

# # ## ### ##### ######## ############# #####################
cleanupTests
