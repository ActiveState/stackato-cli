test map-1.0 {map, wrong args, too many} -setup {
    stage-open
    go-admin
} -body {
    run map A I X
} -cleanup {
    stage-close
} -returnCodes error -match glob -result "wrong#args, too many*"

test map-1.1 {map, wrong args, not enough} -setup {
    stage-open
    go-admin
} -body {
    indir [appdir] { run map -n }
} -cleanup {
    remove-appdir
    stage-close
} -returnCodes error -match glob -result "wrong#args, not enough*"

test map-1.2 {map, no application} -setup {
    stage-open
    go-admin
} -body {
    indir [appdir] { run map -n A }
} -cleanup {
    remove-appdir
    stage-close
} -returnCodes error -result {Error: The application [appdir] is not deployed. Please deploy it, or choose a different application to map.}

test map-1.3 {map, bogus url} -setup {
    stage-open
    go-admin
    make-test-app
} -body {
    indir [appdir] { run map TEST bogus }
} -cleanup {
    remove-test-app
    remove-appdir
    stage-close
} -returnCodes error -result \
    [per-api \
	 {Error 700: Invalid URI: 'bogus'} \
	 {Error: Unknown domain '': Does not exist. Please use 'stackato map-domain' to create the domain and add it to the space.}]

test map-1.4 {map, non-admin login is ok} -setup {
    stage-open
    go-admin
    go-non-admin
    make-test-app
} -body {
    run map TEST [mapurl]
} -cleanup {
    remove-test-app
    if {$isv2} {
	# Old clients need this, after fix of 102833 the client
	# removes it itself, so this breaks. Catch that.
	catch { run delete-route -n [mapurl] }
    }
    be-admin
    remove-non-admin
    remove-appdir
    stage-close
} -match glob -result *

# See also 1.7, 1.8 for users of the result files
test map-1.5 {map} -setup {
    stage-open
    go-admin
    make-test-app
} -body {
    run map TEST [mapurl]
} -cleanup {
    remove-test-app
    if {$isv2 } {
	# Old clients need this, after fix of 102833 the client
	# removes it itself, so this breaks. Catch that.
	catch { run delete-route -n [mapurl] }
    }
